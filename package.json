{
    "name": "@nikkei/http-helper-monorepo",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "turbo run clean",
        "prebuild": "npm run clean",
        "build": "tsc --build",
        "typecheck": "tsc --build",
        "pretest": "npm run build",
        "lint": "eslint .",
        "lint:fix": "npm run lint -- --fix",
        "test": "npm run test:run_only",
        "test:run_only": "turbo run test",
        "test:run_only_with_update_snapshots": "turbo run test:update_snapshots",
        "format": "prettier . --write",
        "format:check": "prettier . --check"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-config-turbo": "^2.4.4",
        "globals": "^16.0.0",
        "prettier": "^3.5.2",
        "turbo": "^2.4.4",
        "typescript": "^5.7.3"
    },
    "packageManager": "npm@11.1.0+sha512.acf301ad9b9ddba948fcb72341e2f0fcae477f56a95cc2a092934d133a7461062633cefbf93d5934a3dc0768674e2edee9f04dcfcc4bb4c327ff0e3a7d552a1b"
